<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.getmobileltd.trafficbar">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.TrafficBarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".registration.login.LoginActivity">

        </activity>
        <activity android:name=".registration.register.confirmregister.ConfirmRegisterActivity">


        </activity>
        <activity android:name=".registration.register.SignUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

        </activity>
        <activity android:name=".intro.IntroActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>